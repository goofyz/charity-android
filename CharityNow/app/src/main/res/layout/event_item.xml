<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    xmlns:bootstrap="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="90dip" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="center_vertical"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/event_org_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/event_org_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/event_memberships"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/ListViewButton"
        android:id="@+id/listview_btn_web"
        android:text="@string/listview_btn_web"
        bootstrap:bb_icon_right="fa-android"
        bootstrap:bb_type="success"
    />

    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/ListViewButton"
        android:id="@+id/listview_btn_recruit_web"
        android:text="@string/listview_btn_recruit_web"
        bootstrap:bb_icon_right="fa-android"
        bootstrap:bb_type="success"
        android:visibility="gone"
    />

    <com.beardedhen.androidbootstrap.BootstrapButton
        style="@style/ListViewButton"
        android:id="@+id/listview_btn_recruit_phone"
        android:text="@string/listview_btn_recruit_phone"
        bootstrap:bb_icon_right="fa-android"
        bootstrap:bb_type="success"
        android:visibility="gone"
    />
</LinearLayout>